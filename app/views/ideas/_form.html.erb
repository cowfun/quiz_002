<%= form_for @idea do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: '5' %>
  </div>

  <div class = 'text-right'>
    <%= f.submit 'Submit', class:"btn btn-outline-primary" %>
  </div>
  
<% end %>
